{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./app",
    "allowJs": true,
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "typeRoots": [ "node_modules/@types" ]
  },
  "include": [
    "./blog/**/*"
  ],
  "exclude": [
    "node_modules",
    "scripts"
  ]
}